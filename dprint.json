{
  "incremental": true,
  "indentWidth": 2,
  "lineWidth": 100,
  "typescript": {
    "quoteProps": "asNeeded",
    "arrowFunction.useParentheses": "force",
    "semiColons": "asi"
  },
  "markdown": {
    "lineWidth": 80,
    "textWrap": "always"
  },
  "includes": ["**.{dockerfile,ts}"],
  "plugins": [
    "https://plugins.dprint.dev/markdown-0.15.2.wasm",
    "https://plugins.dprint.dev/typescript-0.84.4.wasm"
  ]
}
